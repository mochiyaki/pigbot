{
  "name": "pigbot",
  "displayName": "pigbot",
  "description": "Pigbot connection status manager",
  "version": "0.0.2",
	"publisher": "gguf",
	"author": {
		"name": "gguf",
		"email": "info@gguf.us"
	},
	"license": "MIT",
	"homepage": "https://github.com/mochiyaki/pigbot",
	"repository": {
		"type": "git",
		"url": "https://github.com/mochiyaki/pigbot.git"
	},
	"icon": "assets/images/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
	"categories": [
		"Machine Learning",
		"Other"
	],
	"keywords": [
		"ai",
		"cli",
		"gguf"
	],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pigbot.connect",
        "title": "Pigbot: Connect"
      }
    ],
    "configuration": {
      "title": "Pigbot",
      "properties": {
        "pigbot.autoConnect": {
          "type": "boolean",
          "default": false,
          "description": "Automatically connect to Pigbot on startup"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  }
}
